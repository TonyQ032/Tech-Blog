<div id="update-post-wrapper" class="update-post-wrapper" post-id="{{post.id}}">

  <h2 id="update-header" class="dashboard-categories">Update Post</h2>

  <form class="update-post-form">
    <div class="form-group">
      <label for="update-post-name">Post Title</label>
      <input type="text" class="form-control" id="update-post-name" value="{{post.title}}">
    </div>

    <div class="form-group">
      <label for="update-post-content">Description</label>
      <textarea type="text" class="form-control" id="update-post-content">{{post.description}}</textarea>
    </div>

    <button id="update-post-btn" class="btn btn-primary">Update Post <i class="bi bi-plus-lg"></i></button>

  </form>

</div>

<script src="/js/updatepost.js"></script>